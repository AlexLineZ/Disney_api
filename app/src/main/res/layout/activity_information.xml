<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableLayout
        android:id="@+id/detailsContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp">

            <TextView
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:background="#19b33d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:text="Name"
                android:fontFamily="@font/paper_mario_font"/>

            <TextView
                android:id="@+id/name"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                tools:text="Sanya" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp">

            <TextView
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:background="#19b33d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:text="Films"
                android:fontFamily="@font/paper_mario_font"/>

            <TextView
                android:id="@+id/films"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                tools:text="Spider Man" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:background="#19b33d"
                android:textSize="18dp"
                android:text="Short films"
                android:fontFamily="@font/paper_mario_font"/>

            <TextView
                android:id="@+id/shortfilms"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                tools:text="Cycle" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:background="#19b33d"
                android:textSize="18dp"
                android:text="TV Shows"
                android:fontFamily="@font/paper_mario_font"/>

            <TextView
                android:id="@+id/tvshows"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="18dp"
                tools:text="Flash" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp">

            <TextView
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:background="#19b33d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:text="Attractions park"
                android:fontFamily="@font/paper_mario_font"/>

            <TextView
                android:id="@+id/parks"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                tools:text="Beloye lake" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp">

            <TextView
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:background="#19b33d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:text="Allies"
                android:fontFamily="@font/paper_mario_font"/>

            <TextView
                android:id="@+id/allies"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="18dp"
                tools:text="Ivan Vorobev" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp">

            <TextView
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:background="#19b33d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:text="Enemies"
                android:fontFamily="@font/paper_mario_font"/>

            <TextView
                android:id="@+id/enemies"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="18dp"
                tools:text="Yura Sitdikov" />
        </TableRow>

    </TableLayout>



</FrameLayout>